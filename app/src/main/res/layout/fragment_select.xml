            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="240.00dip"

                android:id="@+id/soil_test">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:background="@drawable/side_nav_bar"
                    android:padding="10dp"
                    android:layout_height="240.0dip"
                    android:minHeight="190.0dip"
                    android:layout_weight="1.0">
                    <ImageView
                        android:id="@+id/image_sel"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/soiltest"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:textSize="35.0sp"
                        android:textColor="@android:color/white"
                        android:id="@+id/list_item_google_cards_travel_category_name"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
