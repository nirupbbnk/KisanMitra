                        android:layout_marginRight="24.0dip"
                        android:layout_marginBottom="24.0dip"
                        android:text="Crop"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
